# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
FLASK_ENV=development # or production
DEBUG=True # Set to False in production

# Database
DATABASE_URL=postgresql://user:password@host:port/database_name # Connection string for your database (e.g., PostgreSQL, MySQL)

# Authentication & Security
SECRET_KEY=your_secret_key_here # Used for session management and CSRF protection.  Generate a strong, random key.
# GOOGLE_CLIENT_ID=TODO: VALUE_NEEDED # If using Google OAuth, add your client ID
# GOOGLE_CLIENT_SECRET=TODO: VALUE_NEEDED # If using Google OAuth, add your client secret

# Google Drive API
GOOGLE_DRIVE_CREDENTIALS_FILE=credentials.json # Path to your Google Drive API credentials file
GOOGLE_DRIVE_TOKEN_FILE=token.json # Path to your Google Drive API token file

# Runtime Configuration
PORT=5000 # Port for the application to listen on